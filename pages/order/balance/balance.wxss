/* pages/order/balance/balance.wxss */
page{
  background: #F8F8F8;
}
.top-bar{
padding: 10rpx 10rpx 10rpx 15rpx;
font-size: 14px;
height: 25px;
background-color: white;
position: relative
}
.top-left-label{
  float: left;
font-weight: bold;
}
.top-right-label{
  float:right;
}
.order-info{
  margin-top:10px;
background-color: white;
}
.order-info-title{
  height: 30px;
  font-size: 12px;
  color:lightgray;
  padding: 15rpx 0 0 15rpx;
  text-align: left;
  border-bottom: 1px gainsboro solid;
}
.cart-list-box{
  display:flex;
  font-size:14px;
 border-bottom: 1px gainsboro solid;
}
.list-info{
  font-size:14px;
  width:50%;
  padding:15rpx 0 0 15rpx;
  font-weight:bold;
}
.list-info-size{
  font-size:12px;
}
.order-cut{
   background-color: white;
   padding: 15px 0px;
 border-bottom: 1px gainsboro solid;
}
.order-cut-dec{
  margin:15rpx 10rpx;
  margin-right: 5rpx; 
  padding:5rpx 2rpx;
  background-color: red;
  color:white;
  font-size:14px;
}
.order-cut-note{
  font-size:14px;
  padding: 15rpx 2rpx;
}
.order-cut-number{
  font-size: 15px;
  padding: 15rpx 10px;
  float:right;
}
.activity-color{
 color:coral;
}
.aggregate-info{
  font-size:15px;
 padding-bottom: 10px;
  margin-bottom: 10px;
  height: 30px;
}
.aggregate-info-font{
  padding: 10px 15px;
  float:left;
}
.aggregate-info-number{
  padding:10px 15px;
  float:right;
  font-weight: bold;
}
.info-all{
  margin-top: 10px;
  background: white;
  height: 150px;
}
.info-all-font{
  font-size:14px;
  padding: 15px;
}
.info-fontcolor{
  color:#A3A3A3;
}
.info-all-text{
  font-size: 12px;
  height: 80px;
  padding: 5px;
  background:#F2F2F2;
  width:95%;
}
.pay-bottom{
  font-size:15px;
  padding:5px;
   display: flex; 
  bottom: 0px;
  height: 50px;
  z-index: 1001;
   position: absolute; 
   left:0px;
  right:0px; 
}
 .pay-bottom-icon{
  width:75%;
   float:left; 
  background: black;
  color: #FF9C35;
}
.pay-bottom-pay{
  width: 25%;
  float:right;
  background:#FF9C35;
  color: white;
  text-align: center;
} 
.pay-icon{
  padding-left:15px;
  font-size: 40px;
  text-align: center; 
}
.pay-bottom-font{
  color:white;
  font-size:14px;
  border-radius: 50%;
  background:red;
  text-align: center;
  position: absolute;
  top:5px;
  left:45px;
  padding: 1px 7px;
}
.pay-bottom-number{
  color: white;
  font-size:20px;
  padding:10px 15px;
  position: absolute;
}
.pay-bottom-payTo{
  position: absolute;
  padding: 10px 15px;
  right: 15px;
  top:10px;
  font-size:14px;
}